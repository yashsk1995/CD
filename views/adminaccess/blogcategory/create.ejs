<form method="POST"  class="form" id="createForm" action="/adminaccess/blogcategory/create">
  <a href="/adminaccess/blogcategories" class="back-link">Back to All Categories &raquo;</a>
  <h1 class="page-title">New Category</h1>
  <div class="form-row">
    <label for="post_title">Category Title</label>
    <input type="text" id="post_title" name="name" value="<%= blogCategory.name || '' %>">
    <p><%= error.name || '' %></p>
    <input type="hidden" name="author" value="<%= req.user.id %>"/>
  </div>
  <div class="button-wrap">
    <button type="submit" class="btn">Save</button>
  </div>
</form>
