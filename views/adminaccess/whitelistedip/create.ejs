<form method="POST"  class="form" id="createForm" action="/adminaccess/whitelistedip/create">
  <a href="/adminaccess/whitelistedips" class="back-link">Back to All IPs &raquo;</a>
  <h1 class="page-title">New IP</h1>
  <div class="form-row">
    <label for="post_title">IP Address</label>
    <input type="text" id="post_title" name="ip" value="<%= whitelistedIP.ip || '' %>">
    <p><%= error.ip || '' %></p>
    <input type="hidden" name="createdBy" value="<%= req.user.id %>"/>
  </div>
  <div class="button-wrap">
    <button type="submit" class="btn">Save</button>
  </div>
</form>
