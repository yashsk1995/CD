    </div>
</div>

<div class="home-sh-broker-portal">
    <div class="home-sh-broker-portal__title">The Commercial Direct Broker Portal</div>
    <div class="home-sh-brokers">
        <%
        if(portals && portals.length > 0){
            var pindex = 0;
            var classname = '';
            _.each(portals, function(portal){
                if(pindex == 0){
                    classname = 'home-sh-broker-item';
                }
                else if(pindex == 1) {
                    classname = 'home-sh-broker-item sh-broker-item--dark-bk';
                }
                else if(pindex == 2){
                    classname = 'home-sh-broker-item sh-broker-item--dark-bk';
                }
                else{
                    classname = 'home-sh-broker-item';
                }
                %>
                <div class="<%=classname%>">
                    <%
                    if(portal['type'] == 'link') {
                        %>
                        <a target="_blank" href="<%=portal['val']%>"><%=portal['title']%></a>
                        <%
                    }
                    else if(portal['type'] == 'file'){
                        %>
                        <a target="_blank" href="/images/admin/uploads/<%=portal['val']%>"><%=portal['title']%></a>
                        <%
                    }
                    else{
                        %>
                        <span class=""><%=portal['title']%></span>
                        <%
                    }
                    %>
                </div>
                <%
                
                pindex ++;
                
            })
        }
        %>
    </div>
    
</div>

